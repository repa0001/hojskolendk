---
const { url="#", cardimage="", cardimagealt="", destination="", afrejse="", varighed="", pris="",}= Astro.props;
import Link from "../components/Link.astro";
---

<article class="card @container lg:border-2 border-1 border-black lg:px-2 px-12 pb-4">
    <div class="flex flex-col justify-between h-full">
        <header class="mb-xs relative pt-4">
            <img src={cardimage} alt={cardimagealt} class="object-cover w-full rounded-[30px]">
        </header>
    <h3 class="pl-2 pt-4 pb-2 text-left lg:text-h5 text-h5_mobil">{destination}</h3>
    
    <!-- Første og andet element samlet i kolonne 1, række 1 -->
    <div class="grid grid-cols-2 grid-rows-2 gap-4">
    <div class="col-start-1 row-start-1 text-left pl-2">
        <div class="font-sans font-light lg:text-broedtekst text-broedtekst_mobil"><span>Varighed</span><span></span></div>
        <div><span></span><span>{varighed}</span></div>
    </div>

    <!-- Andet element i kolonne 1, række 2 -->
    <div class="col-start-1 row-start-2 text-left pl-2">
        <div class="font-sans font-light lg:text-broedtekst text-broedtekst_mobil"><span>Næste afrejse</span><span></span></div>
        <div><span></span><span>{afrejse}</span></div>
    </div>

    <!-- Tredje element i kolonne 2, række 1 -->
    <div class="col-start-2 row-start-1 text-right pr-2">
        <div class="font-sans font-light lg:text-link text-link_mobil"><span>Pris:</span><span>{pris}</span></div>
    </div>

    <!-- Fjerde element i kolonne 2, række 2 -->
    <div class="col-start-2 row-start-2 place-content-end text-right pr-2">
        <Link href="/hojskole" variant="primary" size="large">LÆS MERE</Link>
    </div>
    </div>  
</article>







